select
	at.attname,
	format_type(at.atttypid, at.atttypmod)
from
	pg_attribute as at
		left join pg_type as tp on (at.atttypid = tp.oid)
where
	at.attnum > 0 and
	at.attrelid = (select relfilenode from pg_class where relname = 'cpu')
order by
	at.attnum
;
 attname |       format_type        
---------+--------------------------
 time    | timestamp with time zone
 tag1    | text
 tag2    | text
 value1  | bigint
 value2  | double precision
 value3  | text
 value4  | boolean
